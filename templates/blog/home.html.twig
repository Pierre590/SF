{% extends 'base.html.twig'%}

{% block title %}Putain !{% endblock %}

{% block body %}

<div class="container text-center">
    <h1>Le contenu</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-5 mt-4">
            {% for article in articles %}
            <h3>{{article.title}}</h3>
        </div>
        <div class="col-md-7 mt-4">
            <span>{{article.date.format('d/m/y')}}</span>
        </div>
        <div class="row">
            <div class="col-md-3 mt-4">
                {% if article.image %}
                    <img src="{{article.image}}">
                {% endif %}
            </div>
            <div class="col-md-9 mt-4 test">
                <p>{{article.content}}</p>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

{% endblock %}
